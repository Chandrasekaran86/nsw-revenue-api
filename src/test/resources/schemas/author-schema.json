{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "OpenLibrary Author Schema",
  "description": "Schema for OpenLibrary Author API response",
  "properties": {
    "key": {
      "type": "string",
      "description": "Unique identifier for the author"
    },
    "name": {
      "type": "string",
      "description": "Author name"
    },
    "personal_name": {
      "type": "string",
      "description": "Personal name of the author"
    },
    "alternate_names": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of alternate names for the author"
    },
    "birth_date": {
      "type": ["string", "null"],
      "description": "Birth date of the author"
    },
    "death_date": {
      "type": ["string", "null"],
      "description": "Death date of the author"
    },
    "bio": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "value": {
              "type": "string"
            }
          }
        },
        {
          "type": "string"
        }
      ],
      "description": "Biography of the author"
    },
    "website": {
      "type": ["string", "null"],
      "description": "Official website of the author"
    },
    "work_count": {
      "type": "integer",
      "description": "Number of works by the author"
    },
    "top_work": {
      "type": "string",
      "description": "Top work identifier"
    },
    "top_subjects": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Top subjects associated with the author"
    },
    "type": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string"
        }
      },
      "description": "Type indicator"
    }
  },
  "required": ["key", "personal_name"],
  "additionalProperties": true
}
